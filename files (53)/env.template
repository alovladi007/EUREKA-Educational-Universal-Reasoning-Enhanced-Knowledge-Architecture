# EUREKA Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql+asyncpg://eureka:eureka123@localhost:5432/eureka
DATABASE_TEST_URL=postgresql+asyncpg://eureka:eureka123@localhost:5432/eureka_test

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://:eureka123@localhost:6379/0

# ========================================
# SECURITY & AUTH
# ========================================
# IMPORTANT: Change these in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# AI/ML API KEYS
# ========================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=2000

# Feature Flags
RAG_ENABLED=true
AI_FALLBACK_ENABLED=true

# ========================================
# S3/MinIO STORAGE
# ========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=eureka-files
S3_REGION=us-east-1

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100 MB in bytes
ALLOWED_EXTENSIONS=.pdf,.doc,.docx,.jpg,.png,.mp4,.mp3

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@eureka.com
SMTP_FROM_NAME=EUREKA Platform

# ========================================
# FRONTEND CONFIGURATION
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=EUREKA
NEXT_PUBLIC_APP_VERSION=1.0.0

# ========================================
# SERVICE PORTS
# ========================================
API_CORE_PORT=8000
HS_TIER_PORT=8001
TUTOR_LLM_PORT=8002
ASSESSMENT_ENGINE_PORT=8003
ADAPTIVE_LEARNING_PORT=8004
ANALYTICS_DASHBOARD_PORT=8005
FILE_STORAGE_PORT=8006

# ========================================
# MONITORING & LOGGING
# ========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
SENTRY_DSN=  # Optional: Sentry error tracking
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# ========================================
# COMPLIANCE & PRIVACY
# ========================================
FERPA_COMPLIANT=true
COPPA_COMPLIANT=true
HIPAA_COMPLIANT=false
GDPR_COMPLIANT=true
DATA_RETENTION_DAYS=2555  # 7 years for FERPA

# ========================================
# TESTING
# ========================================
TESTING=false
TEST_DATABASE_URL=postgresql+asyncpg://eureka:eureka123@localhost:5432/eureka_test
PYTEST_TIMEOUT=300

# ========================================
# CELERY (for async tasks)
# ========================================
CELERY_BROKER_URL=redis://:eureka123@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:eureka123@localhost:6379/2

# ========================================
# WEBSOCKET CONFIGURATION
# ========================================
WS_ENABLED=true
WS_PORT=8080
WS_MAX_CONNECTIONS=1000

# ========================================
# TIER-SPECIFIC CONFIGURATION
# ========================================
# High School
HS_TIER_ENABLED=true
HS_GAMIFICATION_ENABLED=true
HS_COPPA_STRICT_MODE=true

# Undergraduate
UG_TIER_ENABLED=true
UG_PEER_REVIEW_ENABLED=true

# Graduate
GRAD_TIER_ENABLED=true
GRAD_RESEARCH_MODE_ENABLED=true

# Professional Tiers
MEDICAL_TIER_ENABLED=true
LAW_TIER_ENABLED=true
MBA_TIER_ENABLED=true
ENGINEERING_TIER_ENABLED=true

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_AI_TUTOR=true
FEATURE_AUTO_GRADING=true
FEATURE_ADAPTIVE_LEARNING=true
FEATURE_ANALYTICS=true
FEATURE_FILE_UPLOADS=true
FEATURE_REAL_TIME_COLLAB=false
FEATURE_VIDEO_CALLS=false
FEATURE_MOBILE_APP=false

# ========================================
# DEPLOYMENT ENVIRONMENT
# ========================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
RELOAD=true

# ========================================
# BACKUP CONFIGURATION
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ========================================
# NOTES
# ========================================
# 1. Never commit this file with actual secrets to version control
# 2. In production, use a secrets manager (AWS Secrets Manager, HashiCorp Vault, etc.)
# 3. Generate strong random keys for SECRET_KEY
# 4. Use environment-specific values (dev, staging, prod)
# 5. Keep this file secure with appropriate file permissions (chmod 600 .env)
