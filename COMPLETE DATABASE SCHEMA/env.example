# ========================================
# EUREKA Platform Environment Configuration
# ========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ========================================
# Application
# ========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ========================================
# Database
# ========================================
DATABASE_URL=postgresql://eureka:eureka_dev_password@localhost:5432/eureka
POSTGRES_DB=eureka
POSTGRES_USER=eureka
POSTGRES_PASSWORD=eureka_dev_password

# ========================================
# Redis Cache
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# Object Storage (MinIO/S3)
# ========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=eureka
S3_SECRET_KEY=eureka_minio_password
S3_BUCKET_NAME=eureka-uploads
S3_REGION=us-east-1

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=15

# ========================================
# AI Services
# ========================================
# Get your API keys from:
# Anthropic: https://console.anthropic.com/
# OpenAI: https://platform.openai.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# AI Model Configuration
DEFAULT_AI_MODEL=claude-sonnet-4-20250514
EMBEDDING_MODEL=text-embedding-ada-002
MAX_TOKENS=1024

# ========================================
# Search (OpenSearch)
# ========================================
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin

# ========================================
# Message Queue (Kafka)
# ========================================
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=eureka-consumers

# ========================================
# CORS (Frontend URLs)
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4500

# ========================================
# Email (SMTP)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@eureka.edu
SMTP_FROM_NAME=EUREKA Platform

# ========================================
# Frontend URLs
# ========================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# ========================================
# Service URLs (Internal)
# ========================================
API_CORE_URL=http://localhost:8000
TUTOR_LLM_URL=http://localhost:8001
ASSESS_URL=http://localhost:8002
ADAPTIVE_URL=http://localhost:8003
CONTENT_URL=http://localhost:8004
ANALYTICS_URL=http://localhost:8005

# ========================================
# Tier Service URLs
# ========================================
TIER_HS_URL=http://localhost:8010
TIER_UG_URL=http://localhost:8011
TIER_GRAD_URL=http://localhost:8012

# ========================================
# Professional Service URLs
# ========================================
PRO_MED_URL=http://localhost:8020
PRO_LAW_URL=http://localhost:8021
PRO_MBA_URL=http://localhost:8022
PRO_ENG_URL=http://localhost:8023

# ========================================
# Compliance Flags
# ========================================
FERPA_ENABLED=true
COPPA_ENABLED=true
HIPAA_ENABLED=false
ABA_COMPLIANCE=false

# ========================================
# Feature Flags
# ========================================
ENABLE_GAMIFICATION=true
ENABLE_PARENT_PORTAL=true
ENABLE_REAL_TIME_CHAT=false
ENABLE_VIDEO_CALLS=false
ENABLE_PROCTORING=false

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# File Upload Limits
# ========================================
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# ========================================
# Monitoring & Observability
# ========================================
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# ========================================
# Development Tools
# ========================================
# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@eureka.local
PGADMIN_DEFAULT_PASSWORD=admin

# ========================================
# Testing
# ========================================
TEST_DATABASE_URL=postgresql://eureka:eureka_test@localhost:5432/eureka_test

# ========================================
# Deployment
# ========================================
DOMAIN=eureka.edu
SSL_ENABLED=false
CDN_URL=

# ========================================
# Analytics & Tracking
# ========================================
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ========================================
# Payment Processing
# ========================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ========================================
# LTI Integration
# ========================================
LTI_KEY=
LTI_SECRET=
LTI_ISSUER=

# ========================================
# Backup
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# Notes
# ========================================
# - All *_URL variables should NOT have trailing slashes
# - JWT_SECRET must be at least 32 characters
# - Change all passwords before deploying to production
# - Enable SSL in production
# - Configure proper SMTP for email
# - Get real API keys for AI services
