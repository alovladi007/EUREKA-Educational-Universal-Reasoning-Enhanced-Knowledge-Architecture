# =====================================================
# JWT AUTHENTICATION
# =====================================================

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=30d

# =====================================================
# AI/LLM API KEYS
# =====================================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Default LLM Provider (openai or anthropic)
DEFAULT_LLM_PROVIDER=openai

# =====================================================
# FILE STORAGE
# =====================================================

# Local Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (if using S3 instead of local)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=eduflow-uploads

# Max file upload size (in MB)
MAX_FILE_SIZE_MB=100

# =====================================================
# EMAIL SERVICE
# =====================================================

EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=EduFlow Platform
EMAIL_FROM_ADDRESS=noreply@eduflow.com

# =====================================================
# REDIS (Optional - for caching)
# =====================================================

REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================================
# APPLICATION SETTINGS
# =====================================================

NODE_ENV=development
PORT=8000
API_VERSION=v1
CORS_ORIGIN=http://localhost:3006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Settings
SESSION_SECRET=your_session_secret_change_this_in_production
SESSION_COOKIE_MAX_AGE=86400000

# =====================================================
# LOGGING
# =====================================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/application.log

# =====================================================
# MONITORING (Optional)
# =====================================================

# Sentry
SENTRY_DSN=

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=

# =====================================================
# EXTERNAL SERVICES
# =====================================================

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Video Hosting (Vimeo/YouTube)
VIMEO_ACCESS_TOKEN=
YOUTUBE_API_KEY=

# Analytics
GOOGLE_ANALYTICS_ID=

# =====================================================
# FEATURE FLAGS
# =====================================================

ENABLE_AI_TUTOR=true
ENABLE_PLAGIARISM_CHECK=true
ENABLE_VIDEO_PROCTORING=false
ENABLE_PEER_REVIEW=true
ENABLE_GAMIFICATION=true

# =====================================================
# DEVELOPMENT TOOLS
# =====================================================

# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_SWAGGER_DOCS=true

# Enable GraphQL Playground
ENABLE_GRAPHQL_PLAYGROUND=true

