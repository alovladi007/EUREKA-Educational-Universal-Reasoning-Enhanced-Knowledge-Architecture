# EUREKA Platform Environment Variables

# Database
DATABASE_URL=postgresql://eureka:eureka_dev_pass@localhost:5432/eureka
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eureka
DB_USER=eureka
DB_PASSWORD=eureka_dev_pass

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Service Configuration
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Keys (Add your keys here)
ANTHROPIC_API_KEY=your_api_key_here
OPENAI_API_KEY=your_api_key_here

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Service URLs
HS_SERVICE_URL=http://localhost:8001
UG_SERVICE_URL=http://localhost:8002
GRAD_SERVICE_URL=http://localhost:8003

# Frontend URLs
HS_WEB_URL=http://localhost:3001
UG_WEB_URL=http://localhost:3002
GRAD_WEB_URL=http://localhost:3003
ADMIN_URL=http://localhost:3000

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
S3_BUCKET_NAME=eureka-storage

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id

# High School Tier Specific
HS_CONTENT_FILTER_ENABLED=true
HS_COPPA_MODE=true

# Undergraduate Tier Specific
UG_LTI_KEY=your_lti_key
UG_LTI_SECRET=your_lti_secret

# Graduate Tier Specific
GRAD_CITATION_VERIFY=true
GRAD_IRB_MODE=enabled
