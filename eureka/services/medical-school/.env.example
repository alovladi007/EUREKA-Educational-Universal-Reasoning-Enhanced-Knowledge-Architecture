# EUREKA Medical School Service - Environment Configuration

# Service Configuration
SERVICE_NAME=medical-school
PORT=8000
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://eureka:eureka_dev_password@localhost:5432/eureka
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis (Caching)
REDIS_URL=redis://localhost:6379/10
CACHE_TTL=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Integration
API_CORE_URL=http://localhost:8000
TUTOR_LLM_URL=http://localhost:8001
ASSESSMENT_ENGINE_URL=http://localhost:8002

# AI Integration (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Medical Education Settings
USMLE_QUESTION_DIFFICULTY_LEVELS=easy,medium,hard
OSCE_MAX_SESSION_DURATION=3600
CLINICAL_CASE_TIME_LIMIT=7200

# HIPAA Compliance
HIPAA_MODE=true
AUDIT_LOG_RETENTION_DAYS=2190
PHI_ENCRYPTION_ENABLED=true
DE_IDENTIFICATION_ENABLED=true

# Security
JWT_SECRET=change_this_in_production_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
