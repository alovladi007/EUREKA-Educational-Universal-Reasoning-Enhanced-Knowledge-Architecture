# Database Configuration
DATABASE_URL=postgresql+asyncpg://eureka:eureka_dev_password@db:5432/eureka
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# JWT Configuration
JWT_SECRET=your-secret-key-minimum-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
REFRESH_TOKEN_EXPIRATION_DAYS=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3006,http://localhost:3000,http://localhost:3001

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@eureka.edu
SMTP_FROM_NAME=EUREKA Platform

# S3/MinIO Configuration
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=eureka
S3_SECRET_KEY=eureka_minio_password
S3_BUCKET_NAME=eureka
S3_REGION=us-east-1

# Auth Provider
AUTH_PROVIDER=ory

# Ory Kratos/Hydra (optional)
ORY_KRATOS_URL=
ORY_HYDRA_URL=

# Auth0 (optional)
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_AUDIENCE=

# Compliance Configuration
FERPA_MODE=true
HIPAA_MODE=false
COPPA_MODE=true
PARENTAL_CONSENT_REQUIRED=true
MINIMUM_AGE=13
DATA_RETENTION_DAYS=2555

# Feature Flags
FEATURE_GAMIFICATION=true
FEATURE_MOBILE_APP=true
FEATURE_PROCTORING=false
FEATURE_RESEARCH_MODE=false
FEATURE_MULTILINGUAL=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring (optional)
SENTRY_DSN=

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Internationalization
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,zh-CN,de-DE
